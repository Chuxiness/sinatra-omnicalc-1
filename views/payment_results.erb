<h1>
  Payment Results
</h1>
<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%=params.fetch("apr_num").to_f.to_fs(:percentage, {:precision =>4})%>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= params.fetch("number_of_years") %>
  </dd>
  
  <dt>
    Principal
  </dt>
  <dd>
    <%= params.fetch("Principal_amount").to_f.to_fs(:currency) %>
  </dd>


  <dt>
    Payment
  </dt>
  <dd>
  
    <%= @monthly_payment.to_f.to_fs(:currency) %>
  </dd>
</dl>
